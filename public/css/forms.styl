// main: main.styl, out: forms.css
.form
    display inline-block
    input,select,button
        height 2em
        line-height 2em
        color rgba(0,0,0,1)
        border rgba(0,0,0,.5) 1px solid
        border-radius .4em
        font-size 1em
        width 12em
        padding 0 .4em
    button
        height 2em
        line-height 2em
        border none
        color rgba(0,0,0,1)
        background-color rgb(148,185,220)
        cursor pointer
    fieldset
        border none
        display block
        text-align left
        position relative
        label
            margin 0 1em
            display block
            float left
        input,select,button
            display block
            float right
            min-width 24em
