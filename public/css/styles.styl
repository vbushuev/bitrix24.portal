.sidebar
    width 100%
    display block
    height 3em
    margin 0
    font-size 1.2em;
    position fixed
    z-index 200
    background-color rgba(140,140,230,1)
    .row
        display table-row
        position relative
        height 2em
        padding .4em 2em .4em 0
        margin 0
        .logo
            display inline-block
            position absolute
            left 0
            top .4em
            line-height 2em
            width 160px
            span
                margin-left 2em
                a
                    background url("img/logo.png") no-repeat fixed center
                    display inline-block
                    width 2em
                    height 2em
                    color rgba(255,255,255,1)
        nav
            display inline-block
            position absolute
            right 0
            top .4em
            a
                color rgba(255,255,255,.7)
                height 2em
                line-height 2em
                border-radius .32em
                display inline-block
                padding 0 1em
                margin 0 .6em
                text-align center
                font-weight 100
            a.nav-item:active,a.nav-item.active
                border solid 1px #fff
                color rgba(255,255,255,1)
            a:hover
                color rgba(255,255,255,1)
            a.nav-item:hover
                background-color rgba(255,255,255,.4)
.container
    text-align center
    display table-cell
    vertical-align middle
    position relative
    z-index 100
    padding 3.8em 0 1.8em 0
    *
        position relative
        z-index 100
    .title
        font-size 4em
        margin 0 0 1em 0
    .content
        text-align center
        table
            display inline-block
            tr th
                font-weight 400
                padding .2em
                min-width 6.4em
                text-align right
            tr td
                padding .2em
                text-align right
.footer
    width 100%
    display block
    margin 0
    font-size .8em;
    height 1.6em;
    position fixed
    padding .2em
    bottom 0
    z-index 200
    background-color rgba(160,160,200,.8)
    color rgba(255,255,255,.8)
    text-align center
.overlay
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    display none
    background-color rgba(255,255,255,.72)
    z-index 1
