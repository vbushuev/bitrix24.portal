*
    font-weight 100
    font-family 'Lato','Roboto Mono'
html, body{
    height 100%
}
body
    margin 0
    padding 0
    width 100%
    display table
    background rgba(255,255,255,.6) url("img/background-tree.png") no-repeat fixed center
    background-size cover
    color rgba(255,255,255,1)
